# =============================================================================
# Gorgon Configuration
# =============================================================================
# Copy this file to .env and configure your settings.
# NEVER commit .env to version control!

# =============================================================================
# Required API Keys
# =============================================================================

# OpenAI API Key (Required for AI workflows)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# Optional API Keys
# =============================================================================

# GitHub Personal Access Token
GITHUB_TOKEN=your-github-token-here

# Notion Integration Token
NOTION_TOKEN=your-notion-token-here

# Gmail OAuth Credentials Path
GMAIL_CREDENTIALS_PATH=path/to/credentials.json

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_CLI_PATH=claude
CLAUDE_MODE=api  # 'api' or 'cli'

# =============================================================================
# Security Settings (IMPORTANT for production!)
# =============================================================================

# Secret key for JWT tokens - MUST be changed in production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=change-me-in-production

# Production mode - enforces secure configuration
# Set to 'true' in production environments
PRODUCTION=false

# Require secure config even in dev mode
REQUIRE_SECURE_CONFIG=false

# Demo authentication (password='demo' for any user)
# Set to 'false' in production!
ALLOW_DEMO_AUTH=true

# API credentials for real authentication (comma-separated user:hash pairs)
# Generate hash: python -c "from hashlib import sha256; print(sha256(b'your_password').hexdigest())"
# Example: API_CREDENTIALS=admin:5e884898da28047d9...,user1:abc123...
API_CREDENTIALS=

# =============================================================================
# Database Settings
# =============================================================================

# Database URL
# SQLite (development): sqlite:///gorgon-state.db
# PostgreSQL (production): postgresql://user:pass@host:5432/dbname
DATABASE_URL=sqlite:///gorgon-state.db

# PostgreSQL credentials (for Docker Compose)
POSTGRES_USER=gorgon
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=gorgon

# =============================================================================
# Application Settings
# =============================================================================

APP_NAME=Gorgon
DEBUG=false
LOG_LEVEL=INFO
LOG_FORMAT=text  # 'text' or 'json' (json recommended for production)
SANITIZE_LOGS=true

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=60

# =============================================================================
# Shell Execution Limits
# =============================================================================

# Maximum shell command execution time (seconds)
SHELL_TIMEOUT_SECONDS=300

# Maximum output size (bytes) - default 10MB
SHELL_MAX_OUTPUT_BYTES=10485760

# Allowed shell commands (comma-separated, empty = all allowed)
# Example: SHELL_ALLOWED_COMMANDS=ls,cat,grep,find,git
SHELL_ALLOWED_COMMANDS=
