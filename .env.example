# OpenAI API Key (Required)
OPENAI_API_KEY=your-openai-api-key-here

# GitHub Personal Access Token (Optional)
GITHUB_TOKEN=your-github-token-here

# Notion Integration Token (Optional)
NOTION_TOKEN=your-notion-token-here

# Gmail OAuth Credentials Path (Optional)
GMAIL_CREDENTIALS_PATH=path/to/credentials.json

# Claude/Anthropic Settings (Optional)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_CLI_PATH=claude
CLAUDE_MODE=api

# Application Settings
APP_NAME=Gorgon
DEBUG=False
LOG_LEVEL=INFO
LOG_FORMAT=text  # 'text' or 'json' (json recommended for production)

# Database: sqlite:///gorgon-state.db or postgresql://user:pass@host/db
DATABASE_URL=sqlite:///gorgon-state.db

# Authentication
SECRET_KEY=change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
